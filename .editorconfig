root = true

[*]
charset = utf-8
end_of_line = lf

[**.{ts,js}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[**.coffee]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[**.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[**.{yaml, cson}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[**.md]
trim_trailing_whitespace = false
