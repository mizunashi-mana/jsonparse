gulp:
  base     : 'gulp'
  file     : '../gulpfile.coffee'
  tasks    : 'tasks/**/*.coffee'
  conf     : 'conf/**/*.cson'
tsconf     : 'tsconfig.json'
dtsmconf   : 'dtsm.json'
srcDir:
  base     : 'src'
  srcTs    : '**/*.ts'
  srcJs    : '**/*.js'
  srcDts   : '**/*.d.ts'
  typings  : '../typings/**/*.d.ts'
distDir:
  base     : 'dist'
  jsDir    : 'js'
  dtsDir   : 'definitions'
  mapDir   : 'maps'
